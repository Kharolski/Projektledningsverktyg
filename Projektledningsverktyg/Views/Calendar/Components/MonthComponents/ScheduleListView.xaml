<UserControl x:Class="Projektledningsverktyg.Views.Calendar.Components.MonthComponents.ScheduleListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektledningsverktyg.Views.Calendar.Components.MonthComponents"
             xmlns:converters="clr-namespace:Projektledningsverktyg.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:ScheduleDisplayConverter x:Key="ScheduleDisplayConverter"/>
    </UserControl.Resources>

    <Border
        Background="White"
        BorderThickness="1" 
        BorderBrush="#DDDDDD"
        CornerRadius="8"
        Margin="5,2.5,5,2.5">
        <Border.Resources>
            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="Width" Value="28"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Background="#2196F3" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock Text="Dagens Schema" 
                      VerticalAlignment="Center"
                      Margin="15,0,0,0"
                      Foreground="White"
                      FontSize="14"
                      FontWeight="SemiBold"/>
                <Button Content="✕" 
                    FontWeight="ExtraBold"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    Width="30" Height="30"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CloseButton_Click"/>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="15,10,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Work-School Header -->
                <TextBlock Grid.Row="0" 
                      Text="Jobb - Skola" 
                      FontSize="16" Margin="0,0,0,10"
                      FontWeight="SemiBold" 
                      Foreground="#2196F3"/>

                <!-- Work-School Items -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding WorkSchoolSchedules}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <Grid>
                                <ItemsPresenter/>
                                <TextBlock Text="Inga scheman tillagda"
                                          Foreground="#666666"
                                          FontStyle="Italic"
                                          HorizontalAlignment="Center"
                                          Margin="0,15,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Items.Count, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,5" 
                                    Padding="10,0"
                                    Background="Transparent"
                                    CornerRadius="4">
                                <Grid>
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource ScheduleDisplayConverter}">
                                                <Binding Path="Title"/>
                                                <Binding Path="StartTime"/>
                                                <Binding Path="EndTime"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <StackPanel x:Name="EditButtons" Orientation="Horizontal" HorizontalAlignment="Right" Opacity="0">
                                        <Button Content="✏️" 
                                            Width="28" Height="28" 
                                            Background="#f0b40e" 
                                            Margin="0,0,5,0"
                                            BorderThickness="0"
                                            Click="EditSchedule_Click"/>
                                        <Button Content="❌" 
                                            Width="28" Height="28" 
                                            Background="#f0370e"
                                            BorderThickness="0"
                                            Click="DeleteSchedule_Click"/>
                                    </StackPanel>
                                    <Grid.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="EditButtons" 
                                                               Storyboard.TargetProperty="Opacity" 
                                                               To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="EditButtons" 
                                                               Storyboard.TargetProperty="Opacity" 
                                                               To="0" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Grid.Triggers>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Deviation Header -->
                <TextBlock Grid.Row="2" 
                      Text="Avvikande" 
                      FontSize="16" 
                      FontWeight="SemiBold" 
                      Foreground="#2196F3"
                      Margin="0,15,0,0"/>

                <!-- Deviation Items (same template as Work-School) -->
                <ItemsControl Grid.Row="3" ItemsSource="{Binding DeviationSchedules}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <Grid>
                                <ItemsPresenter/>
                                <TextBlock Text="Inga avvikande tillagda"
                                          Foreground="#666666"
                                          FontStyle="Italic"
                                          HorizontalAlignment="Center"
                                          Margin="0,15,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Items.Count, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5,0,5" 
                                Padding="10,0"
                                Background="Transparent"
                                CornerRadius="4">
                                <Grid>
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource ScheduleDisplayConverter}">
                                                <Binding Path="Title"/>
                                                <Binding Path="StartTime"/>
                                                <Binding Path="EndTime"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <StackPanel x:Name="EditButtons" Orientation="Horizontal" HorizontalAlignment="Right" Opacity="0">
                                        <Button Content="✏️" 
                                            Width="28" Height="28" 
                                            Background="#f0b40e" 
                                            Margin="0,0,5,0"
                                            BorderThickness="0"
                                            Click="EditSchedule_Click"/>
                                        <Button Content="❌" 
                                            Width="28" Height="28" 
                                            Background="#f0370e"
                                            BorderThickness="0"
                                            Click="DeleteSchedule_Click"/>
                                    </StackPanel>
                                    <Grid.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="EditButtons" 
                                                               Storyboard.TargetProperty="Opacity" 
                                                               To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="EditButtons" 
                                                               Storyboard.TargetProperty="Opacity" 
                                                               To="0" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Grid.Triggers>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
