<Window x:Class="Projektledningsverktyg.Views.Members.MemberDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projektledningsverktyg.Views.Members"
        mc:Ignorable="d"
        Title="Redigera Medlem" 
        SizeToContent="Height" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>

        <!-- DatePicker Style -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>          <!-- Header -->
            <RowDefinition Height="Auto"/>          <!-- Profile Image -->
            <RowDefinition Height="Auto"/>          <!-- Form Fields -->
            <RowDefinition Height="Auto"/>          <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Redigera Profil"
               FontSize="24"
               FontWeight="SemiBold"
               Margin="0,0,0,20"/>

        <Separator Margin="0,25,0,0"/>

        <!-- Profile Image Section -->
        <Grid Grid.Row="1" Margin="0,10,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Headers -->
            <TextBlock Grid.Column="0" 
                       Text="Nuvarande avatar" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Grid.Column="1" 
                       Text="Välj en avatar eller ladda upp egen bild" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="20,0,0,10"/>

            <!-- Current Avatar -->
            <StackPanel Grid.Row="1" Grid.Column="0" Width="175">
                <Ellipse Height="120" Width="120" HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ProfileImage"/>
                    </Ellipse.Fill>
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ProfileImagePath}" Value="">
                                    <Setter Property="Fill">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/user.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ProfileImagePath}" Value="{x:Null}"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Fill">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/user.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <Button Content="Välj bild"
                        x:Name="AvatarButton"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Padding="10,5"
                        Height="30"
                        Width="80"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Click="AvatarButton_Click"/>
            </StackPanel>

            <!-- Avatar Options -->
            <ListBox Grid.Row="1" Grid.Column="1" 
                     SelectionChanged="OnAvatarSelected"
                     Height="Auto" 
                     Margin="20,0,0,0"
                     ItemsSource="{Binding DefaultAvatars}"
                     x:Name="AvatarListBox">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel  MaxWidth="240"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Ellipse Height="60" Width="60" Margin="5">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>



        <!-- Form Fields -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Name Fields -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Förnamn*" Margin="5,0,0,5"/>
                    <TextBox x:Name="FirstNameTextBox"
                             Height="40" Padding="5,10,0,0" TextChanged="FirstNameTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="BorderBrush" Value="Red"/>
                                        <Setter Property="Background" Value="#FFF0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock x:Name="FirstNameError" 
                              Text="Minst 2 bokstäver" 
                              Foreground="Red" 
                              Visibility="Collapsed"
                              Margin="0,5,0,0"
                              FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Efternamn*" Margin="5,0,0,5"/>
                    <TextBox x:Name="LastNameTextBox" 
                             Height="40" Padding="5,10,0,0" TextChanged="LastNameTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="BorderBrush" Value="Red"/>
                                        <Setter Property="Background" Value="#FFF0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock x:Name="LastNameError" 
                              Text="Minst 2 bokstäver" 
                              Foreground="Red" 
                              Visibility="Collapsed"
                              Margin="0,5,0,0"
                              FontSize="12"/>
                </StackPanel>
            </Grid>

            <!-- Email and Admin Rights -->
            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="E-post" Margin="5,0,0,5"/>
                    <TextBox x:Name="EmailTextBox" 
                             Height="40" 
                             Background="#F0F0F0"
                             Padding="5,10,0,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                    <CheckBox x:Name="AdminCheckBox" 
                             Content="Admin rättigheter" 
                             Height="40"
                             Margin="5,0,0,-10"/>
                </StackPanel>
            </Grid>

            <!-- Birth Date and Role -->
            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Födelsedatum" Margin="5,0,0,5"/>
                    <TextBox x:Name="BirthDateTextBox" 
                             Height="40"
                             Background="#F0F0F0"
                             Padding="5,0,5,0"
                             IsHitTestVisible="False"
                             Focusable="False"
                             FontWeight="SemiBold">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border BorderBrush="{x:Static SystemColors.ControlDarkBrush}" 
                                        BorderThickness="1">
                                    <Grid>
                                        <TextBox Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Text}"
                                                 Background="{TemplateBinding Background}"
                                                 BorderThickness="0"
                                                 Padding="{TemplateBinding Padding}"/>
                                                            <TextBlock Text="📅"
                                                  FontSize="16"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  Margin="0,0,5,0"
                                                  Foreground="Gray"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Roll*" Margin="5,0,0,5"/>
                    <ComboBox x:Name="RoleComboBox" 
                             Height="40"
                             Padding="5,10,0,0">
                        <ComboBoxItem Content="Förälder"/>
                        <ComboBoxItem Content="Son"/>
                        <ComboBoxItem Content="Dotter"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button Content="Avbryt"
                Width="100"
                Height="35"
                Margin="0,0,10,0"
                Click="CancelButton_Click"/>
            <Button Content="Spara"
                Width="100"
                Height="35"
                Background="#4CAF50"
                Foreground="White"
                Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>

</Window>

