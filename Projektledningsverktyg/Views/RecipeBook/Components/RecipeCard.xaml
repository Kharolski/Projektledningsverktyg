<UserControl x:Class="Projektledningsverktyg.Views.RecipeBook.Components.RecipeCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektledningsverktyg.Views.RecipeBook.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border Width="200" 
            Height="250"
            Margin="10"
            BorderThickness="1"
            BorderBrush="#DDDDDD"
            CornerRadius="8"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Recipe Image Area -->
            <Rectangle Grid.Row="0" Fill="#75d9c8">
                <Rectangle.OpacityMask>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Black" Offset="0.7"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
            </Rectangle>

            <!-- Recipe Info -->
            <Grid Grid.Row="1" Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Recept Namn"
                          FontSize="16"
                          FontWeight="Bold"/>

                <StackPanel Grid.Row="1" 
                          Orientation="Horizontal"
                          Margin="0,5">
                    <TextBlock Text="⏱️ 30 min"/>
                    <TextBlock Text="👥 4 port" 
                             Margin="15,0"/>
                </StackPanel>

                <Border Grid.Row="2" 
                        Background="#E6E6FA"
                        CornerRadius="4"
                        HorizontalAlignment="Left"
                        Padding="8,4">
                    <TextBlock Text="Middag" 
                             FontSize="12"/>
                </Border>
            </Grid>

            <!-- Favorite Button -->
            <Button Width="32" 
                    Height="32"
                    Content="❤️"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"/>
        </Grid>
    </Border>
</UserControl>
