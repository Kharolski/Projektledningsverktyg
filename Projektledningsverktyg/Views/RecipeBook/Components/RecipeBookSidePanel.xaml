<UserControl x:Class="Projektledningsverktyg.Views.RecipeBook.Components.RecipeBookSidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektledningsverktyg.Views.RecipeBook.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="#F5F5F5">
        <!-- Quick Access Section -->
        <TextBlock Text="Snabbval" 
              FontSize="18" 
              FontWeight="Bold"
              Margin="20,20,20,10"/>

        <StackPanel Margin="10">
            <Button Command="{Binding ShowAllRecipesCommand}" Height="35" Margin="10,5" Background="#F0F8FF">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📚" Margin="0,0,10,0"/>
                    <TextBlock Text="Alla Recept"/>
                </StackPanel>
            </Button>

            <Button Height="35" Margin="10,5" Background="#FFE4E1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="❤️" Margin="0,0,10,0"/>
                    <TextBlock Text="Favoriter"/>
                </StackPanel>
            </Button>

            <Button Height="35" Margin="10,5" Background="#E0FFFF">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🕒" Margin="0,0,10,0"/>
                    <TextBlock Text="Senast Tillagda"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Categories Section -->
        <Expander IsExpanded="True" Margin="0,15">
            <Expander.Style>
                <Style TargetType="Expander">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Expander">
                                <DockPanel>
                                    <ContentPresenter DockPanel.Dock="Top" 
                                        ContentSource="Header"/>
                                    <Border Name="ContentPanel" 
                                            DockPanel.Dock="Bottom" 
                                            Visibility="Collapsed">
                                        <ContentPresenter/>
                                    </Border>
                                </DockPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="ContentPanel" 
                                                Property="Visibility" 
                                                Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Expander.Style>
            <Expander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Måltidstyper" 
                              FontSize="18" Margin="20,0,0,0"
                              FontWeight="Bold"/>
                    <ToggleButton Grid.Column="1" Margin="0,0,20,0"
                         IsChecked="{Binding IsExpanded, 
                         RelativeSource={RelativeSource AncestorType=Expander}}"
                         Content="▼"/>
                </Grid>
            </Expander.Header>
            
            <!-- Meal Types Dropdown -->
            <StackPanel Margin="10">
                <Button Height="35" Margin="10,5" Background="#E6E6FA">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Frukost" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="10,0,0,0">
                            <TextBlock Text="8" Padding="8,2"/>
                        </Border>
                    </Grid>
                </Button>
                <Button Height="35" Margin="10,5" Background="#E6E6FA">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Lunch" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="10,0,0,0">
                            <TextBlock Text="12" Padding="8,2"/>
                        </Border>
                    </Grid>
                </Button>
                <Button Height="35" Margin="10,5" Background="#E6E6FA">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Middag" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="10,0,0,0">
                            <TextBlock Text="15" Padding="8,2"/>
                        </Border>
                    </Grid>
                </Button>
            </StackPanel>
        </Expander>

        <Expander IsExpanded="True" Margin="0,5">
            <Expander.Style>
                <Style TargetType="Expander">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Expander">
                                <DockPanel>
                                    <ContentPresenter DockPanel.Dock="Top" 
                                                    ContentSource="Header"/>
                                    <Border Name="ContentPanel" 
                                            DockPanel.Dock="Bottom" 
                                            Visibility="Collapsed">
                                        <ContentPresenter/>
                                    </Border>
                                </DockPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="ContentPanel" 
                                                Property="Visibility" 
                                                Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Expander.Style>
            <Expander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ingredienser" 
                  FontSize="18" Margin="20,0,0,0"
                  FontWeight="Bold"/>
                    <ToggleButton Grid.Column="1" Margin="0,0,20,0"
             IsChecked="{Binding IsExpanded, 
             RelativeSource={RelativeSource AncestorType=Expander}}"
             Content="▼"/>
                </Grid>
            </Expander.Header>

            <!-- Main Ingredients -->
            <StackPanel Margin="10">
                <Button Height="35" Margin="10,5" Background="#FFE4E1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Kyckling" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="10,0,0,0">
                            <TextBlock Text="11" Padding="8,2"/>
                        </Border>
                    </Grid>
                </Button>
                <Button Height="35" Margin="10,5" Background="#FFE4E1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Fisk" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="10,0,0,0">
                            <TextBlock Text="16" Padding="8,2"/>
                        </Border>
                    </Grid>
                </Button>
                <Button Height="35" Margin="10,5" Background="#FFE4E1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Vegetariskt" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="10" Margin="10,0,0,0">
                            <TextBlock Text="9" Padding="8,2"/>
                        </Border>
                    </Grid>
                </Button>
            </StackPanel>
        </Expander>

    </StackPanel>
</UserControl>
