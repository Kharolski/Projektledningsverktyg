<UserControl x:Class="Projektledningsverktyg.Views.RecipeBook.Components.RecipeDetailsView"
             x:Name="RecipeDetailsViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektledningsverktyg.Views.RecipeBook.Components"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>         <!-- Image -->
            <RowDefinition Height="Auto"/>         <!-- Title -->
            <RowDefinition Height="Auto"/>         <!-- Time and Servings -->
            <RowDefinition Height="Auto"/>         <!-- Description -->
            <RowDefinition Height="Auto"/>         <!-- Ingredients -->
            <RowDefinition Height="Auto"/>         <!-- Instructions -->
            <RowDefinition Height="Auto"/>         <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Image -->
        <Image Grid.Row="0" x:Name="RecipeImage"
           Source="{Binding Image}"
           Height="300"/>

        <!-- Title -->
        <TextBlock Grid.Row="1" 
               Text="{Binding Name}" 
               FontSize="24" 
               Margin="10"/>

        <!-- Time, Servings and Favorit -->
        <Grid Grid.Row="2" MinWidth="450" Margin="10,0,10,0">
            
            <!-- Left side: Time and Servings -->
            <StackPanel Orientation="Horizontal" Margin="0,7,0,0" HorizontalAlignment="Left">
                <TextBlock Text="🕒 "/>
                <TextBlock Text="{Binding CookingTime}"/>
                <TextBlock Text=" min  "/>
                <TextBlock Text="👥 "/>
                <TextBlock Text="{Binding Servings}"/>
                <TextBlock Text=" portions"/>
            </StackPanel>

            <!-- Right side: Heart -->
            <Button Width="32" 
                    Height="32"
                    Click="FavoriteButton_Click"
                    HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                            <Setter Property="Source" Value="/Images/Favorit/heart.png"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsFavorite}" Value="False">
                                            <Setter Property="Source" Value="/Images/Favorit/empty_heart.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        
        <!-- Description -->
        <Border Grid.Row="3" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Margin="10" 
                Padding="10" 
                CornerRadius="5"
                Background="#F5F5F5">
            <StackPanel>
                <TextBlock Text="Description:" 
                   FontWeight="Bold" 
                   Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Description}" 
                   TextWrapping="Wrap"
                   MinHeight="100"/>
            </StackPanel>
        </Border>

        <!-- Ingredients -->
        <Border x:Name="IngredientsPanel"
                Grid.Row="4"
                BorderBrush="Gray" 
                BorderThickness="1" 
                Margin="10" 
                Padding="10" 
                CornerRadius="5"
                Background="#F5F5F5"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Ingredients:" 
                  FontWeight="Bold" 
                  Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding Ingredients}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="{Binding Amount}"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding Unit}"/>
                                <TextBlock Text=" "/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Border x:Name="InstructionsPanel"
                Grid.Row="5"
                BorderBrush="Gray" 
                BorderThickness="1" 
                Margin="10" 
                Padding="10" 
                CornerRadius="5"
                Background="#F5F5F5"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Instructions:" 
                  FontWeight="Bold" 
                  Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding Instructions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <TextBlock Text="{Binding StepNumber, StringFormat='Step {0}:'}"
                                 FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Description}"
                                 TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>


        <!-- Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    Margin="10"
                    HorizontalAlignment="Right">

            <Button Content="Full vy"
                    x:Name="ViewToggleButton"
                    Click="ViewToggleButton_Click"
                    Width="100"
                    Height="30"
                    Margin="5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#004c80 "/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Redigera" 
                    Click="EditButton_Click"
                    Width="100"
                    Height="30"
                    Margin="5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#28A745"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#19692c"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Radera" 
                    Click="DeleteButton_Click"
                    Width="100"
                    Height="30"
                    Margin="5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#DC3545"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#b21f2d"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
