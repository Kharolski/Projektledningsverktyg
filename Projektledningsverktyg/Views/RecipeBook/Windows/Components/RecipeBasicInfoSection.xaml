<UserControl x:Class="Projektledningsverktyg.Views.RecipeBook.Windows.Components.RecipeBasicInfoSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektledningsverktyg.Views.RecipeBook.Windows.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <StackPanel Margin="0,20,0,0">
        <TextBlock Text="Grundinformation" 
              FontSize="20" 
              FontWeight="SemiBold" 
              Margin="0,0,0,20"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>         <!-- Image -->
                <ColumnDefinition Width="*"/>           <!-- Form Fields -->
            </Grid.ColumnDefinitions>

            <!-- Left: Image Upload -->
            <Border Height="250" 
                Background="#F8F8F8" 
                BorderBrush="#E0E0E0"
                BorderThickness="2"
                CornerRadius="4"
                Margin="0,0,20,0">
                <Button Background="Transparent"
                    BorderThickness="0"
                    Padding="20">
                    <StackPanel>
                        <TextBlock Text="📤" 
                             FontSize="24"
                             HorizontalAlignment="Center"/>
                        <TextBlock Text="Klicka för att lägga till bild" 
                             Margin="0,10,0,0"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Right: Form Fields -->
            <StackPanel Grid.Column="1">
                
                <!-- Recipe Name -->
                <StackPanel Margin="0,0,10,15">
                    <TextBlock Text="📝 Receptnamn" 
                          FontWeight="Medium"
                          Margin="0,0,0,5"/>
                    <TextBox Height="35" 
                         FontSize="14"
                         Padding="8,5"/>
                </StackPanel>

                <!-- Categories Grid -->
                <Grid Margin="0,10,10,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Meal Type -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="🏷️ Måltidstyp" 
                      FontWeight="Medium"
                      Margin="0,0,0,5"/>
                        <ComboBox Height="35" 
                      FontSize="14"
                      Padding="8,5">
                            <ComboBoxItem Content="Frukost"/>
                            <ComboBoxItem Content="Lunch"/>
                            <ComboBoxItem Content="Middag"/>
                            <ComboBoxItem Content="Efterrätt"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Main Ingredient Category -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="🥘 Huvudingrediens" 
                      FontWeight="Medium"
                      Margin="0,0,0,5"/>
                        <ComboBox Height="35" 
                      FontSize="14"
                      Padding="8,5">
                            <ComboBoxItem Content="Kyckling"/>
                            <ComboBoxItem Content="Fisk"/>
                            <ComboBoxItem Content="Vegetariskt"/>
                            <ComboBoxItem Content="Pasta"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Details Grid -->
                <Grid Margin="0,10,10,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cooking Time -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="⏱️ Tillagningstid" 
                      FontWeight="Medium"
                      Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Height="35" 
                                    FontSize="14"
                                    Padding="8,5"/>
                            <TextBlock Grid.Column="1" 
                                      Text="min" 
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                    <!-- Servings -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="👥 Portioner" 
                                  FontWeight="Medium"
                                  Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Height="35" 
                                    FontSize="14"
                                    Padding="8,5"/>
                            <TextBlock Grid.Column="1" 
                                      Text="port" 
                                      Margin="8,0,0,0"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                    
                </Grid>
            </StackPanel>
        </Grid>
    </StackPanel>

</UserControl>
