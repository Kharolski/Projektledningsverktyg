<Window x:Class="Projektledningsverktyg.Views.RecipeBook.Windows.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projektledningsverktyg.Views.RecipeBook.Windows"
        xmlns:components="clr-namespace:Projektledningsverktyg.Views.RecipeBook.Windows.Components"
        mc:Ignorable="d"
        Title="AddRecipeWindow" Height="450" Width="800">
    
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Title -->
            <RowDefinition Height="*"/>         <!-- Content -->
            <RowDefinition Height="Auto"/>      <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Text="Lägg till nytt recept" 
                  FontSize="24" 
                  FontWeight="Bold"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <components:RecipeBasicInfoSection/>
                <components:RecipeIngredientsSection/>
                <Separator Margin="0,30,0,10" 
                          Background="#E0E0E0"
                          Height="1"/>

                <components:RecipeInstructionsSection/>
                <Separator Margin="0,30,0,10" 
                          Background="#E0E0E0"
                          Height="1"/>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Margin="0,0,0,10" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Avbryt"
                    Height="30"
                    Width="100" 
                    Margin="0,0,10,0"/>
            <Button Content="Spara" 
                    Height="30"
                    Width="100" 
                    Background="#4CAF50" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
