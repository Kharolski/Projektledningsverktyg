<UserControl x:Class="Projektledningsverktyg.Views.Tasks.Components.Task.TaskComments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektledningsverktyg.Views.Tasks.Components.Task"
             xmlns:converters="clr-namespace:Projektledningsverktyg.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:EmptyToTextConverter x:Key="EmptyToTextConverter"/>

        <converters:BoolToIntConverter x:Key="BoolToIntConverter"/>
        <converters:BoolToIntConverterReverse x:Key="BoolToIntConverterReverse"/>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PriorityTextStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Priority}" Value="Urgent">
                    <Setter Property="Foreground" Value="#FF0000"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Priority}" Value="High">
                    <Setter Property="Foreground" Value="#FF4444"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Priority}" Value="Medium">
                    <Setter Property="Foreground" Value="#FFBB33"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Priority}" Value="Low">
                    <Setter Property="Foreground" Value="#00C851"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="20,15">
            <Button DockPanel.Dock="Right" 
                Content="✕"
                Click="CloseButton_Click"
                Style="{StaticResource CloseButtonStyle}"/>
            <TextBlock Text="Kommentarer" 
                  FontSize="20" 
                  FontWeight="SemiBold"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled"  Padding="0,0,0,70">
            <StackPanel Margin="20">
                
                <!-- Comments List -->
                <ListBox ItemsSource="{Binding CurrentTaskComments}" 
                            Background="White"
                            Margin="0,0,0,15">
                    <ListBox.Template>
                        <ControlTemplate TargetType="ListBox">
                            <Border Background="{TemplateBinding Background}">
                                <Grid>
                                    <TextBlock Text="Inga kommentarer än"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="Gray"
                                            Visibility="{Binding CurrentTaskComments.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                                    <ItemsPresenter/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemTemplate>
                        <DataTemplate>

                            <DockPanel Margin="5" Width="460"  ClipToBounds="False">
                                <DockPanel.Style>
                                    <Style TargetType="DockPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCurrentUserComment}" Value="True">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="FlowDirection" Value="RightToLeft"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DockPanel.Style>

                                
                                <Grid>
                                    <Border Background="#F5F5F5" CornerRadius="8" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <!-- User Profile Section -->
                                            <StackPanel Margin="0,0,15,0">
                                                <Border Width="40" Height="40" CornerRadius="20">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Member.ProfileImagePath}" Value="{x:Null}">
                                                                    <Setter Property="Background">
                                                                        <Setter.Value>
                                                                            <ImageBrush ImageSource="pack://application:,,,/Images/user.png"/>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Border.Background>
                                                        <ImageBrush>
                                                            <ImageBrush.ImageSource>
                                                                <PriorityBinding>
                                                                    <Binding Path="Member.ProfileImagePath"/>
                                                                    <Binding Source="pack://application:,,,/Images/user.png"/>
                                                                </PriorityBinding>
                                                            </ImageBrush.ImageSource>
                                                        </ImageBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Text="{Binding Member.FirstName}" 
                                                            FontWeight="SemiBold"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,5,0,0"/>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:g}}"
                                                            Foreground="Gray"
                                                            HorizontalAlignment="Center"
                                                            FontSize="11"/>
                                            </StackPanel>

                                            <!-- Separator -->
                                            <Rectangle Width="1" Fill="#E0E0E0" Margin="0,5"/>

                                            <!-- Comment Section -->
                                            <TextBlock Text="{Binding Content}"
                                                        TextWrapping="Wrap"
                                                        Margin="15,0,0,0"
                                                        VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Delete Button -->
                                    <Border Width="24" 
                                            Height="24" 
                                            CornerRadius="12"
                                            Background="#ff4444"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Margin="2,2,12,0"
                                            Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Background" Value="#ff4444"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCurrentUserComment}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#cc0000"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Button Command="{Binding DataContext.DeleteCommentCommand, 
                                                        RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding Id}"
                                                Background="Transparent"
                                                BorderThickness="0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#E53935"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                            CornerRadius="12">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#B71C1C"/>
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding IsCurrentUserComment}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <TextBlock Text="×" 
                                                      FontSize="16" 
                                                      FontWeight="Bold"
                                                       Margin="0,0,0,5"
                                                      Foreground="White"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Button>
                                    </Border>
                                </Grid>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>
        </ScrollViewer>
        
        <!-- Fixed Comment Box -->
        <Border Grid.Row="1" 
                VerticalAlignment="Bottom" 
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0">
            <DockPanel Margin="20">
                <TextBox x:Name="CommentBox" Text="{Binding CommentText, UpdateSourceTrigger=PropertyChanged}"
                        DockPanel.Dock="Left"
                        Margin="0,0,10,0"
                        MinHeight="60"
                        Padding="10"
                        MinWidth="100"
                         Width="350"
                        Background="White"
                        TextWrapping="Wrap"
                        AcceptsReturn="True">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Resources>
                                <VisualBrush x:Key="WatermarkBrush" TileMode="None" Opacity="0.5" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock Text="Skriv din kommentar här..." />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="{StaticResource WatermarkBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Button Content="Lägg till"
                        Command="{Binding AddCommentCommand}"
                        CommandParameter="{Binding Text, ElementName=CommentBox}"
                        Padding="15,8"
                        Width="80"
                        Height="35"
                        HorizontalAlignment="Right"
                        Background="#2196F3"
                        Foreground="White"/>
            </DockPanel>
        </Border>

    </Grid>
</UserControl>
