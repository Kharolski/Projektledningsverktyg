<Page x:Class="Projektledningsverktyg.Views.Tasks.Components.Events.EventsTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projektledningsverktyg.Views.Tasks.Components.Events"
      xmlns:converters="clr-namespace:Projektledningsverktyg.Converters"
      xmlns:viewmodels="clr-namespace:Projektledningsverktyg.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EventsTab">

    <Page.Resources>
        <DropShadowEffect x:Key="SoftShadow" 
                      BlurRadius="10" 
                      ShadowDepth="2" 
                      Direction="270" 
                      Color="#20000000" 
                      Opacity="0.3"/>
        <converters:EventTypeToColorConverter x:Key="EventTypeToColorConverter"/>
        <converters:EventTypeToIconConverter x:Key="EventTypeToIconConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:TimeDisplayConverter x:Key="TimeDisplayConverter"/>
    </Page.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Add Event Button -->
            <RowDefinition Height="Auto"/>      <!-- Message Panel -->
            <RowDefinition Height="*"/>         <!-- Events List -->
        </Grid.RowDefinitions>

        <!-- Message Panel -->
        <TextBlock Grid.Row="1"
                   Height="30"
                   Margin="0,20,0,10"
                   FontSize="14" FontStyle="Italic"
                   TextAlignment="Center"
                   Foreground="Green"
                   Text="{Binding MessageText}"
                   Visibility="{Binding IsMessageVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <!-- Events List -->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding EventsByCategory}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,20,0,0" >
                        <!-- Header with lines -->
                        <Grid Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Line Grid.Column="0" 
                                  X2="1" 
                                  Stretch="Fill" 
                                  Stroke="#2196F3" 
                                  StrokeThickness="1" 
                                  Y1="0.5" Y2="0.5"/>

                            <TextBlock Grid.Column="1" 
                                     Text="{Binding Key}" 
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Margin="15,0"
                                     Foreground="#2196F3"/>

                            <Line Grid.Column="2" 
                                  X2="1" 
                                  Stretch="Fill" 
                                  Stroke="#2196F3" 
                                  StrokeThickness="1" 
                                  Y1="0.5" Y2="0.5"/>
                        </Grid>

                        <!-- Events in magazine style -->
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Your existing event card template -->
                                    <Border Background="White" 
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8" 
                                            Padding="20,15" 
                                            Margin="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Date Circle with Category Color -->
                                            <Border Grid.Column="0" 
                                                    Width="60" Height="60" 
                                                    CornerRadius="30"
                                                    Margin="0,0,15,0"
                                                    Effect="{StaticResource SoftShadow}"
                                                    BorderThickness="1"
                                                    BorderBrush="#E0E0E0"
                                                    Panel.ZIndex="1">
                                                <Border.Background>
                                                    <Binding Path="Type" Converter="{StaticResource EventTypeToColorConverter}"/>
                                                </Border.Background>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:dd}'}"
                                                            FontSize="24" 
                                                            FontWeight="Bold"
                                                            Foreground="White"
                                                            HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:MMM}'}"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Event Details -->
                                            <StackPanel Grid.Column="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Type, Converter={StaticResource EventTypeToIconConverter}}"
                                                      FontSize="20"
                                                      Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding Title}"
                                                      FontWeight="Bold"
                                                      FontSize="16"
                                                      VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Type}"
                                                  Foreground="{Binding Type, Converter={StaticResource EventTypeToColorConverter}}"
                                                  Margin="0,4,0,0"/>
                                                <StackPanel Orientation="Horizontal" 
                                                  Margin="0,8,0,0">
                                                    <TextBlock Text="🕒" Margin="0,0,5,0"/>
                                                    <TextBlock VerticalAlignment="Center">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource TimeDisplayConverter}">
                                                                <Binding Path="StartTime"/>
                                                                <Binding Path="EndTime"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}"
                                                  Margin="0,8,0,0"
                                                  TextWrapping="Wrap"
                                                  Foreground="#666"/>
                                            </StackPanel>

                                            <!-- Delete Button -->
                                            <Button Grid.Column="2" 
                                                    Width="32" Height="32"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding DataContext.DeleteEventCommand, 
                                                              RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding Id}">
                                                <TextBlock Text="🗑️" 
                                                            FontSize="16"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>

        <!-- Floating Add Button -->
        <Button Grid.Row="3"
                Width="56"
                Height="56"
                Command="{Binding AddEventCommand}"
                ToolTip="Lägg till händelse"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,30,30">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#1976D2"
                            CornerRadius="28">
                        <TextBlock Text="+"
                                   Margin="0,0,0,8"
                                  FontSize="28"
                                  FontWeight="Medium"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
