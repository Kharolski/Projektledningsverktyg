<Window x:Class="Projektledningsverktyg.Views.Tasks.Components.Events.AddEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projektledningsverktyg.Views.Tasks.Components.Events"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Lägg till ny händelse" Height="540" Width="530"
        WindowStartupLocation="CenterOwner" Background="#F5F5F5">

    <Border Background="White" 
            CornerRadius="8" 
            Margin="10" 
            Padding="20,10,20,20"
            BorderThickness="1"
            BorderBrush="#E0E0E0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Ny händelse" 
                   FontSize="24"
                       Foreground="#1976D2"
                   FontWeight="SemiBold"
                   Margin="0,0,0,30"/>

            <!-- Form Content -->
            <StackPanel Grid.Row="1" Margin="0,0">
                <!-- Title -->
                <TextBox Style="{StaticResource ModernTextBox}"
                         Tag="Titel"
                         Name="TitleTextBox"
                         Margin="0,0,0,20"/>

                <!-- Date and Type in same row -->
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Using ModernDatePicker style -->
                    <DatePicker Style="{StaticResource ModernDatePicker}"
                                Name="DatePicker"
                                Tag="Datum"
                                Margin="0,0,10,0"/>

                    <!-- Modernare typ-selector -->
                    <ComboBox Style="{StaticResource ModernComboBox}"
                              Tag="Händelsetyp"
                              Grid.Column="1"
                              Name="TypeComboBox"
                              Margin="10,0,0,0"/>
                </Grid>

                <!-- Time Selection with modern style -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Time Label -->
                    <TextBlock Text="Tid:" Grid.Column="0" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="#666666"
                               Margin="0,0,0,15"
                               Grid.ColumnSpan="7"
                               VerticalAlignment="Bottom"/>

                    <!-- Start Time -->
                    <ComboBox Grid.Column="1" 
                              Style="{StaticResource ModernComboBox}"
                              Tag="HH"
                              x:Name="StartHourCombo"
                              Margin="0,25,2,0"/>

                    <TextBlock Grid.Column="2" 
                               Text=":" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="5,25,5,0"/>

                    <ComboBox Grid.Column="3" 
                              Style="{StaticResource ModernComboBox}"
                              Tag="MM"
                              x:Name="StartMinuteCombo"
                              Margin="2,25,2,0"/>

                    <TextBlock Grid.Column="4" 
                               Text="-" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="10,25,10,0"/>

                    <!-- End Time -->
                    <ComboBox Grid.Column="5" 
                              Style="{StaticResource ModernComboBox}"
                              Tag="HH"
                              x:Name="EndHourCombo"
                              Margin="2,25,2,0"/>

                    <TextBlock Grid.Column="6" 
                               Text=":" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="5,25,5,0"/>

                    <ComboBox Grid.Column="7" 
                              Style="{StaticResource ModernComboBox}"
                              Tag="MM"
                              x:Name="EndMinuteCombo"
                              Margin="2,25,0,0"/>
                </Grid>

                <!-- Description -->
                <TextBox Style="{StaticResource ModernMultiLineTextBox}"
                         Tag="Beskrivning" 
                         Name="DescriptionTextBox"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,20,0,0"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Error Message on the Left -->
                <Border Grid.Column="0" HorizontalAlignment="Center"
                        x:Name="ErrorBorder"
                        CornerRadius="4"
                        BorderBrush="#FF4D4D"
                        BorderThickness="1"
                        VerticalAlignment="Center" 
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Margin="10,5">
                        <TextBlock Text="⚠️" 
                                    Foreground="#FF4D4D"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"/>
                        <TextBlock x:Name="ErrorMessage"
                                    Text="Felmeddelande"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="#D32F2F"/>
                    </StackPanel>
                </Border>
                <!-- Buttons on the Right -->
                <StackPanel Grid.Column="2" 
                         Orientation="Horizontal">
                    <Button Content="Avbryt" 
                            Style="{StaticResource CancelButton}"
                            Click="CancelButton_Click"
                            Margin="0,0,10,0"/>
                    <Button Content="Spara" 
                            Style="{StaticResource SaveButton}"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
            
        </Grid>
    </Border>



</Window>
