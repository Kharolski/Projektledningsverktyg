<Page x:Class="Projektledningsverktyg.Views.Tasks.Components.Meals.MealsTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projektledningsverktyg.Views.Tasks.Components.Meals"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MealsTab">

    <Grid x:Name="MainGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Add Meal Section -->
        <local:AddMealSection x:Name="AddMealSection" Grid.Row="0"/>

        <!-- Meals List -->
        <local:ListMealsSection x:Name="ListMealsSection" Grid.Row="1"/>
        
    </Grid>
</Page>
