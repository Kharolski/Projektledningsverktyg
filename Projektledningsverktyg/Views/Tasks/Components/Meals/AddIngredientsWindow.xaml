<Window x:Class="Projektledningsverktyg.Views.Tasks.Components.Meals.AddIngredientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Projektledningsverktyg.ViewModels"
        Title="Lägg till ingredienser" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">



    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Ingredienser"
                 FontSize="24"
                 FontWeight="SemiBold"
                 Margin="0,0,0,20"/>

        <!-- Add ingredient section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="IngredientTextBox" 
                     Text="{Binding NewIngredient, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,10">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="Skriv ingrediens..." Foreground="Gray"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Button Content="Lägg till ingrediens"
                    Command="{Binding AddIngredientCommand}"
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>

        <!-- Ingredients list -->
        <ListView Grid.Row="2" 
                  ItemsSource="{Binding Ingredients}"
                  Margin="0,10"
                  Background="White"
                  BorderThickness="1"
                  BorderBrush="#E0E0E0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Name}" 
                                 VerticalAlignment="Center"/>
                        <Button Grid.Column="1" 
                                Content="Ta bort"
                                Command="{Binding DataContext.RemoveIngredientCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                Padding="10,5"
                                Margin="10,0,0,0"
                                Background="#FF5252"
                                Foreground="White"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Save button -->
        <Button Grid.Row="3" 
                Content="Spara ingredienser"
                Command="{Binding SaveIngredientsCommand}"
                Height="40"
                Margin="0,10,0,0"
                Background="#2196F3"
                Foreground="White"/>
    </Grid>
</Window>
