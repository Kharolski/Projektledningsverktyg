<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Meal Type Colors -->
    <SolidColorBrush x:Key="BreakfastColor" Color="#FF9800"/>
    <SolidColorBrush x:Key="LunchColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="DinnerColor" Color="#2196F3"/>
    <SolidColorBrush x:Key="SnackColor" Color="#9C27B0"/>
    <SolidColorBrush x:Key="DessertColor" Color="#E91E63"/>

    <!-- UI Colors -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#F8F8F8"/>
    <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="PrimaryText" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#757575"/>
</ResourceDictionary>