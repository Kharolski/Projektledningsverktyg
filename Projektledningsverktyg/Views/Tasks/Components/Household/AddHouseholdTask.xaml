<Window x:Class="Projektledningsverktyg.Views.Tasks.Components.Household.AddHouseholdTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projektledningsverktyg.Views.Tasks.Components.Household"
        mc:Ignorable="d"
        Title="AddHouseholdTask" Height="450" Width="800">

    <StackPanel Margin="20">
        <TextBlock Text="Titel" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Title}" Margin="0,0,0,15"/>

        <TextBlock Text="Beskrivning" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Description}" 
             Height="60" 
             TextWrapping="Wrap"
             AcceptsReturn="True"
             Margin="0,0,0,15"/>

        <GroupBox Header="Utförs på" Margin="0,0,0,15">
            <StackPanel>
                <CheckBox Content="Alla dagar" 
                  IsChecked="{Binding SelectAllDays}"
                  Margin="0,5,0,10"/>
                <WrapPanel>
                    <CheckBox Content="Måndag" 
                      IsChecked="{Binding Monday}"
                      Margin="0,0,15,0"/>
                    <CheckBox Content="Tisdag" 
                      IsChecked="{Binding Tuesday}"
                      Margin="0,0,15,0"/>
                    <CheckBox Content="Onsdag" 
                      IsChecked="{Binding Wednesday}"
                      Margin="0,0,15,0"/>
                    <CheckBox Content="Torsdag" 
                      IsChecked="{Binding Thursday}"
                      Margin="0,0,15,0"/>
                    <CheckBox Content="Fredag" 
                      IsChecked="{Binding Friday}"
                      Margin="0,0,15,0"/>
                    <CheckBox Content="Lördag" 
                      IsChecked="{Binding Saturday}"
                      Margin="0,0,15,0"/>
                    <CheckBox Content="Söndag" 
                      IsChecked="{Binding Sunday}"/>
                </WrapPanel>
            </StackPanel>
        </GroupBox>

        <TextBlock Text="Tilldela till" Margin="0,0,0,5"/>
        <ComboBox ItemsSource="{Binding Members}"
              DisplayMemberPath="FirstName"
              SelectedItem="{Binding SelectedMember}"
              Margin="0,0,0,15"/>

        <Button Content="Spara" 
            Command="{Binding SaveCommand}"
            Style="{StaticResource ActionButton}"
            Margin="0,20,0,0"/>
    </StackPanel>
</Window>
