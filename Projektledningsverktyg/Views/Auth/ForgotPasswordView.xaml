<UserControl x:Class="Projektledningsverktyg.Views.Auth.ForgotPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projektledningsverktyg.Views.Auth"
             mc:Ignorable="d" 
             Height="Auto"
             d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Width="400"
                MinWidth="300"
                Height="Auto"
                MinHeight="400"
                Margin="20"
                Background="#F5F7FA"
                CornerRadius="20"
                Padding="40"
                ClipToBounds="True"
                MouseLeftButtonDown="Border_MouseLeftButtonDown">

            <StackPanel>
                <TextBlock Text="Återställ Lösenord"
                          FontSize="24" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,40"/>

                <TextBlock Text="E-post"/>
                <Grid>
                    <TextBox x:Name="EmailTextBox"
                            Height="40"
                            Margin="0,5,0,20"
                            VerticalContentAlignment="Center"
                            Padding="10,0"
                            LostFocus="EmailTextBox_LostFocus"/>

                    <TextBlock x:Name="EmailValidationIcon"
                              Text="✓"
                              FontSize="16"
                              Foreground="Green"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,10,15"
                              Visibility="Collapsed"/>
                </Grid>
                <TextBlock x:Name="SuccessMessage"
                           Text=""
                           Foreground="#4CAF50"
                           FontSize="12"
                           Margin="0,-10,0,15"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="EmailErrorMessage"
                           Text=""
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,-10,0,15"
                           Visibility="Collapsed"/>

                <Button Content="Skicka återställningslänk" 
                        Height="45"
                        Click="SendResetLink_Click"
                        FontSize="16">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#7C4DFF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock HorizontalAlignment="Center" 
                          Margin="0,20,0,0">
                    <Hyperlink TextDecorations="None"
                              Click="BackToLogin_Click">
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink">
                                <Setter Property="Foreground" Value="#7C4DFF"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Hyperlink.Style>
                        Tillbaka till login
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
