<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main DatePicker style -->
    <Style x:Key="ModernDatePicker" TargetType="{x:Type DatePicker}">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Border CornerRadius="4"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Style tag name  -->
                            <TextBlock x:Name="PlaceholderText"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="#999"
                                   Margin="12,-55,12,0"
                                   FontSize="11"
                                   Width="Auto" Height="12" 
                                   HorizontalAlignment="Left"
                                   Panel.ZIndex="1"
                                   Padding="5,0">
                                <TextBlock.Background>
                                    <SolidColorBrush Color="White" Opacity="1"/>
                                </TextBlock.Background>
                            </TextBlock>

                            <DatePickerTextBox x:Name="PART_TextBox"
                                  Grid.Column="0"
                                  Margin="12,0"
                                  VerticalAlignment="Center"/>
                            <!-- Style for button -->
                            <Button x:Name="PART_Button"
                                Grid.Column="1"
                                Width="30"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Grid>
                                            <Path x:Name="CalendarIcon"
                                              Data="M19,3H18V1H16V3H8V1H6V3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                                              Fill="#666"
                                              Width="23"
                                              Height="23"
                                              Stretch="Uniform"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="CalendarIcon" Property="Fill" Value="#1976D2"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="CalendarIcon" Property="Fill" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <!-- Popup kalender view -->
                            <Popup x:Name="PART_Popup" 
                                   StaysOpen="False"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                                <Border Background="White" 
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="4" 
                                        Padding="10">
                                    <Calendar x:Name="PART_Calendar">
                                        <Calendar.Style>
                                            <Style TargetType="Calendar">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Calendar">
                                                            <StackPanel>
                                                                <!-- Header -->
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Button x:Name="PART_PreviousButton" Content="&lt;" Grid.Column="0"/>
                                                                    <Button x:Name="PART_HeaderButton" Grid.Column="1"/>
                                                                    <Button x:Name="PART_NextButton" Content="&gt;" Grid.Column="2"/>
                                                                </Grid>

                                                                <!-- Days of week -->
                                                                <Grid x:Name="PART_DayTitles"/>

                                                                <!-- Month content -->
                                                                <Grid x:Name="PART_MonthView"/>
                                                            </StackPanel>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Calendar.Style>


                                    </Calendar>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for the text input part -->
    <Style x:Key="ModernDatePickerTextBox" TargetType="{x:Type DatePickerTextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                    <Grid>
                        <TextBox x:Name="PART_TextBox"
                            Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Margin="0"
                            FontSize="16"
                            VerticalContentAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>